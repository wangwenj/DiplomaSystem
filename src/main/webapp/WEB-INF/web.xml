<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <description>This is the description of my J2EE component</description>
        <display-name>This is the display name of my J2EE component</display-name>
        <servlet-name>Loginservlet</servlet-name>
        <servlet-class>servlet.Loginservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Loginservlet</servlet-name>
        <url-pattern>*.login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaffManageServlet</servlet-name>
        <servlet-class>servlet.StaffManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffManageServlet</servlet-name>
        <url-pattern>*.staff</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DepartManageServlet</servlet-name>
        <servlet-class>servlet.DepartManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartManageServlet</servlet-name>
        <url-pattern>*.depart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PosiManageServlet</servlet-name>
        <servlet-class>servlet.PosiManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PosiManageServlet</servlet-name>
        <url-pattern>*.posi</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VacateServlet</servlet-name>
        <servlet-class>servlet.VacateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VacateServlet</servlet-name>
        <url-pattern>*.vacate</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>servlet.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>*.userDelete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PositionDeleteServlet</servlet-name>
        <servlet-class>servlet.PositionDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PositionDeleteServlet</servlet-name>
        <url-pattern>*.positionDelete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DepartDeleteServlet</servlet-name>
        <servlet-class>servlet.DepartDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartDeleteServlet</servlet-name>
        <url-pattern>*.departDelete</url-pattern>
    </servlet-mapping>

</web-app>
